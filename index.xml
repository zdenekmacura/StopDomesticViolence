<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/css" href="vytky.css"?>
<?xml-stylesheet type="text/xsl" href="class2.xsl"?>
<ScrollView android:layout_height="wrap_content" android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical" android:weightSum="1">
        <TextView id="@+id/nadpis" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="8dp" text="Udělování výtek" textAppearance="?android:attr/textAppearanceMedium" textColor="#FF4400" textSize="28sp"/>
        <TextView id="@+id/popis" android:layout_gravity="left" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="5dp" text="Výtky mohou mít charakter psychického, fyzického, ekonomického, emocionálního nebo sexuálního násilí nebo sociální izolace." textColor="#FFFFBB" textSize="16sp"/>
        <LinearLayout style="@style/LayoutTypeStyle">
            <TextView id="@+id/psychickeknasili" text="Kategorie - Psychické násilí" style="@style/Category"/>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/urazky" text="Urážka" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editurazky" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/vyhruzka" text="Vyhrůžka" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editvyhruzka" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/zastraseni" text="Zastrašování" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editzastraseni" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/viny" text="Vyvolávání pocitu viny" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editviny" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/obvinovani" text="Vymyšlené obviňování" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editobvinovani" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/poslusnost" text="Nucení k poslušnosti" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editposlusnost" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/ponizovani" text="Ponižování, ktitizování" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editponizovani" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/kontrola" text="Zvýšená kontrola" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editkontrola" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/vycitky" text="Výčitky" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editvycitky" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/lhani" text="Lhaní a překrucování skutečnosti" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editlhani" style="@style/CustomEditText"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout style="@style/LayoutTypeStyle">
            <TextView id="@+id/emocionalninasili" text="Kategorie - Emocionální násilí" style="@style/Category"/>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/niceniveci" text="Ničení věcí, ke kterým má obět emocionální vztah" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editniceniveci" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/smichutrpeni" text="Směje se utrpení druhého" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editsmichutrpeni" style="@style/CustomEditText"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout style="@style/LayoutTypeStyle">
            <TextView id="@+id/fyzickeknasili" text="Kategorie - Fyzické násilí" style="@style/Category"/>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/facky" text="Facky" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editfacky" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/pesti" text="Rány pěstí" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editpesti" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/kopance" text="Kopance" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editkopance" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/tlucenihlavou" text="Tlučení hlavou" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/edittlucenihlavou" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/vlasy" text="Tahání za vlasy" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editvlasy" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/skrceni" text="Škrcení" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editskrceni" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/bitipredmetem" text="Bití nějakým předmětem" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editbitipredmetem" style="@style/CustomEditText"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout style="@style/LayoutTypeStyle">
            <TextView id="@+id/socialniizolace" text="Sociální násilí - izolace" style="@style/Category"/>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/zabranovaninavstev" text="Zabraňování návštěv" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editzabranovaninavstev" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/kontrolakomunikace" text="Kontrola komunikace SMS, maily, volání" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editkontrolakomunikace" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/doprovazeni" text="Doprovázení" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editdoprovazeni" style="@style/CustomEditText"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout style="@style/LayoutTypeStyle">
            <TextView id="@+id/ekonomickenasili" text="Ekonomické násilí - zneužívání" style="@style/Category"/>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/ekonomickakontrola" text="Ekonomická kontrola" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editekonomickakontrola" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/snahaomajetek" text="Snaha získat majetek a peníze" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editsnahaomajetek" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/prace" text="Snaha narušovat nové pracovní příležitosti" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editprace" style="@style/CustomEditText"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout style="@style/LayoutTypeStyle">
            <TextView id="@+id/projevyobeti" text="Projevy u oběti" style="@style/Category"/>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/fyzickaujma" text="Fyzická újma" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editfyzickaujma" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/psychika" text="Psychická újma" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editpsychika" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/vstricnost" text="Snaha oběti být vstřícná k útočníkovi, pachateli" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editvstricnost" style="@style/CustomEditText"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout style="@style/LayoutTypeStyle">
            <TextView id="@+id/psychopatickeprojevypachatele" text="Psychopatické rysy pachatelů - Znaky psychopata" style="@style/Category"/>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/znakykoukolik" text="Znaky psychopata podle MUDr. František Koukolík, DrSc" textSize="18sp" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editznakykoukolik" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/isabelle" text="30 znaků manipulátora podle psycholožky Isabelle Nazare-Aga (10 znaků stačí)" textSize="18sp" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editisabelle" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/pcl" text="PCL-R test: 21 znaků podle Dr.Robert D. Hare (13 stačí na odhaleného psychopata )" textSize="18sp" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editpcl" style="@style/CustomEditText"/>
            </LinearLayout>
            <LinearLayout style="@style/LayoutStyle">
                <CheckBox id="@+id/macura" text="Další znaky psychopatů, pachatelů domácího násilí podle badatele Mgr. Zdeňka Macury" textSize="18sp" style="@style/CustomCheckBox"/>
                <MultiAutoCompleteTextView id="@+id/editmacura" style="@style/CustomEditText"/>
            </LinearLayout>
        </LinearLayout>
        <Button id="@+id/buttonvybervytykaneho" android:layout_height="45dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_width="wrap_content" android:onClick="doLaunchContactPicker" text="Vyber vytýkanou osobu s adresáře" textSize="15sp"/>
        <TextView android:gravity="left" id="@+id/vytykanynumber" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="5dp" text="" textColor="#FFFFFF" textSize="15sp"/>
        <Button id="@+id/buttongenerujvytku" android:layout_height="45dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_width="wrap_content" android:onClick="generateVytka" text="Vygeneruj znění výtky" textSize="15sp"/>
        <TextView android:gravity="left" id="@+id/note" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="10dp" text="Znění oficiální výtky:" textColor="#FF0000" textSize="20sp"/>
        <EditText android:background="#ffffff" android:ems="10" android:gravity="left|top" id="@+id/editvytka" android:inputType="textMultiLine" android:isScrollContainer="true" android:layout_height="wrap_content" android:layout_width="match_parent" android:minHeight="120dp" android:padding="10dp" text="" textColor="#FF0000" textSize="18sp"/>
        <Button id="@+id/buttonsendsms" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_width="wrap_content" android:onClick="sendSMSMessage" android:padding="10dp" text="Odešli výtku vytýkané osobě" textSize="15sp" android:visibility="gone"/>
        <Button id="@+id/buttonpolicie" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_width="wrap_content" text="Pošli na policii - tlačítko zatím nefunguje - bude v další verzi" textSize="15sp"/>
        <Button id="@+id/exitbutton" android:layout_height="wrap_content" android:layout_width="wrap_content" text="Ukončit"/>
        <TextView id="@+id/popis" android:layout_gravity="left" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="5dp" text="Designed and developed by Zdeněk Macura ( zdenek.macura@email.cz )" textColor="#FFFFBB" textSize="16sp"/>
    </LinearLayout>
</ScrollView>